CompileFlags:
  Add: ["-std:c++latest"]

Diagnostics:
  UnusedIncludes: Strict
  ClangTidy:
    Add: [
        #
        bugprone-*,
        cert-*,
        modernize-*,
        performance-*,

        misc-*,
        clang-diagnostic-*,
        clang-analyzer-*,
        cppcoreguidelines-*,
      ]
    Remove: [
        #
        bugprone-easily-swappable-parameters,
        cppcoreguidelines-avoid-magic-numbers,
        modernize-use-trailing-return-type,
        performance-enum-size,
      ]
